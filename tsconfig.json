{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2018",
      "lib": ["es2018","dom"],
      "rootDir": "./src",
      "strict": true,
      "sourceMap": true,
      "inlineSources": true,
      "removeComments": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
    },
}